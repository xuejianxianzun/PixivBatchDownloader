{
  "name": "",
  "version": "",
  "manifest_version": 2,
  "description": "",
  "icons": {
    "16": "icon/logo16.png",
    "32": "icon/logo32.png",
    "48": "icon/logo48.png",
    "128": "icon/logo128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icon/logo16.png",
      "32": "icon/logo32.png",
      "48": "icon/logo48.png",
      "128": "icon/logo128.png"
    },
    "default_title": "Pixiv Batch Downloader"
  },
  "content_scripts": [
    {
      "js": ["lib/Viewerjs-mix.js"],
      "matches": [
        "*://www.pixiv.net/member.php*",
        "*://www.pixiv.net/member_illust.php*",
        "*://www.pixiv.net/bookmark.php*"
      ],
      "run_at": "document_end"
    },
    {
      "js": ["lib/zip.js", "lib/whammy.js"],
      "matches": ["*://www.pixiv.net/*"],
      "run_at": "document_end"
    },
    {
      "js": ["js/lang.js", "js/content.js"],
      "matches": ["*://www.pixiv.net/*", "*://www.pixivision.net/*"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "downloads",
    "*://www.pixiv.net/*",
    "*://www.pixivision.net/*",
    "*://i.pximg.net/*"
  ],
  "web_accessible_resources": [
    "lib/z-worker.js",
    "style/xzstyle.css",
    "images/github-logo.png",
    "images/wiki.png"
  ]
}
